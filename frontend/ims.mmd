usecase
    title Дадлагын Удирдлагын Системийн Хэрэглээний Тохиолдлын Диаграмм

    actor student as Оюутан
    actor teacher as Багш
    actor admin as Админ
    actor employer as "Ажил олгогч"

    rectangle "Дадлагын Удирдлагын Систем" {
        student --> (Байршлын мэдээлэл харах (GIS))
        student --> (Цагийн хуваарь харах)
        student --> (Тайлан татаж авах (PDF))
        student --> (Гүйцэтгэлийн самбар үзэх)
        student --> (CV байршуулах/засах)

        teacher --> (Оюутан үнэлэх (10 оноо))
        teacher --> (Байршил баталгаажуулах)
        teacher --> (Ажил олгогчтой чатлах)
        teacher --> (Оюутны тайлан хянах)

        admin --> (Эрхийн удирдлага (RBAC))
        admin --> (Системийн лог хянах)
        admin --> (Өгөгдлийн нөөцлөлт тохируулах)
        admin --> (Хэрэглэгчийн бүртгэл удирдах)

        employer --> (Оюутны CV харах)
        employer --> (Үнэлгээний загвар бөглөх)
        employer --> (Хамтарсан үнэлгээ хийх)
        employer --> (Багштай чатлах)

        (Оюутан үнэлэх (10 оноо)) ..> (Хамтарсан үнэлгээ хийх) : <<extend>>
        (Үнэлгээний загвар бөглөх) ..> (Хамтарсан үнэлгээ хийх) : <<extend>>
        (Байршлын мэдээлэл харах (GIS)) ..> (Хэрэглэгчийн бүртгэлтэй байх) : <<include>>
        (Тайлан татаж авах (PDF)) ..> (Хэрэглэгчийн бүртгэлтэй байх) : <<include>>
    }

    note right of student
      Оюутан:
      - GIS байршил харах
      - Цагийн хуваарь шалгах
      - Тайлан татах
      - Гүйцэтгэл хянах
    end

    note right of teacher
      Багш:
      - Үнэлгээ хийх
      - Байршил батлах
      - Тайлан хянах
    end

    note left of admin
      Админ:
      - Эрхийн тохиргоо
      - Лог хянах
      - Нөөцлөлтийн удирдлага
    end

    note left of employer
      Ажил олгогч:
      - CV харах
      - Үнэлгээ бөглөх
      - Хамтарсан үнэлгээ өгөх
    end
